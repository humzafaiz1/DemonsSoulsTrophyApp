                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/bernhard_font"
                android:drawableTop="@drawable/umbasa"
                android:text="@string/umbasa"
                android:onClick="showUmbasa"
                android:textSize="50sp" />

            <Button
                android:id="@+id/roadToPossibilitiesTrophyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/bernhard_font"
                android:drawableTop="@drawable/roadtopossibilities"
