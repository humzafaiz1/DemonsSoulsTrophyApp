                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/bernhard_font"
                android:drawableTop="@drawable/witchinthetowertrophy"
                android:text="@string/witch_in_the_tower"
                android:onClick="showWitchInTheTower"
                android:textSize="50sp" />

            <Button
