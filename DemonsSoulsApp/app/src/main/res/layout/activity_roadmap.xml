                android:textSize="50sp" />

            <Button
                android:id="@+id/saintsTrophyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/bernhard_font"
                android:drawableTop="@drawable/saintstrophy"
                android:text="@string/saint_s_trophy"
                android:onClick="showSaintsTrophy"
                android:textSize="50sp" />

            <Button
