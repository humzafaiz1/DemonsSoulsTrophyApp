<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".BrotherInArmsActivity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:fontFamily="@font/bernhard_font"
                android:gravity="center"
                android:text="@string/brother_in_arms"
                android:textColor="@color/tan"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/phalanxTrophyImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#000000"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/brotherinarmstrophy"
                android:contentDescription="@string/picture_of_knight" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:fontFamily="@font/bernhard_font"
                android:gravity="center"
                android:text="@string/brother_in_arms_text"
                android:textColor="@color/tan"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:fontFamily="@font/bernhard_font"
                android:gravity="center"
                android:text="@string/brother_in_arms_trophy_guide"
                android:textColor="@color/tan"
                android:textSize="22sp" />

            <Button
                android:id="@+id/towerKnightTrophyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/bernhard_font"
                android:drawableTop="@drawable/penetratortrophy"
                android:text="@string/penetrator_s_trophy"
                android:onClick="showPenetrator"
                android:textSize="50sp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>